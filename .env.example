# Toolbridge Configuration
# Copy this file to .env and modify as needed.
# Environment variables take precedence over this file.
# CLI arguments take precedence over environment variables.

# =============================================================================
# Connection Settings
# =============================================================================

# Backend llama.cpp server URL
# TOOLBRIDGE_BACKEND_URL=http://localhost:8080

# Port to listen on
# TOOLBRIDGE_PORT=4000

# Host to bind to
# TOOLBRIDGE_HOST=0.0.0.0

# =============================================================================
# Transformation Settings
# =============================================================================

# Enable tool call transformation (set to false for passthrough mode)
# TOOLBRIDGE_TRANSFORM_ENABLED=true

# If transform fails, try retry
# TOOLBRIDGE_FALLBACK_TO_RETRY=true

# Max retries if transform fails
# TOOLBRIDGE_MAX_RETRIES=1

# =============================================================================
# Sampling Parameters (optional overrides)
# When set, these override whatever the client sends.
# Leave unset to pass through client values to the backend.
# =============================================================================

# Override temperature (e.g., 0.7)
# TOOLBRIDGE_TEMPERATURE=

# Override top_p (e.g., 0.9)
# TOOLBRIDGE_TOP_P=

# Override top_k (e.g., 40)
# TOOLBRIDGE_TOP_K=

# Override min_p (e.g., 0.05)
# TOOLBRIDGE_MIN_P=

# Override repeat_penalty (e.g., 1.0)
# TOOLBRIDGE_REPEAT_PENALTY=

# Override presence_penalty
# TOOLBRIDGE_PRESENCE_PENALTY=

# Override frequency_penalty
# TOOLBRIDGE_FREQUENCY_PENALTY=

# =============================================================================
# Debug Settings
# =============================================================================

# Enable debug logging
# TOOLBRIDGE_DEBUG=false

# Log sampling params for each request
# TOOLBRIDGE_LOG_SAMPLING_PARAMS=true

# =============================================================================
# Message Logging Settings
# =============================================================================

# Enable message logging in sessions
# TOOLBRIDGE_LOG_MESSAGES=true

# Max messages per session (circular buffer)
# TOOLBRIDGE_MESSAGE_BUFFER_SIZE=1024

# =============================================================================
# Session Settings
# =============================================================================

# Seconds of inactivity before a session expires and is archived
# TOOLBRIDGE_SESSION_TIMEOUT_SECONDS=3600

# =============================================================================
# Streaming Settings
# =============================================================================

# Timeout for streaming buffer in seconds
# TOOLBRIDGE_STREAM_BUFFER_TIMEOUT=120.0

# =============================================================================
# CORS Settings
# =============================================================================

# Enable CORS for admin endpoints
# TOOLBRIDGE_CORS_ENABLED=false

# Allowed CORS origins as JSON array, e.g.: ["http://localhost:5173"]
# Leave unset or null for wildcard (*)
# TOOLBRIDGE_CORS_ORIGINS=

# Enable CORS for ALL routes including /v1/* proxy endpoints
# Use with caution - exposes backend API to browsers
# TOOLBRIDGE_CORS_ALL_ROUTES=false
